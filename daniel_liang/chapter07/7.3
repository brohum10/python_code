def main():
    account_real = Account(1122, 20000, 4.5)#1122 is for id, 20000 is the balance, 4.5 is the annual interest rate
    account_real.withdraw(2500)
    account_real.deposit(3000)
    print("The ID is:",account_real.getid())
    print("The Balance is:",account_real.getbalance())
    print("The Monthly Interest Rate is",account_real.getMonthlyInterestRate())
    print("The Monthly Interest is",account_real.getMonthlyInterest())

    
main()
