import math

class RegularPolygon():
    def __init__(self=1,n=3,side=1,x=0,y=0):#self default is one, n is number OF SIDES is three, side is legnth of sides, x and y default is 0
        self.n = n
        self.side = side
        self.x = x
        self.y = y
         
    def getPerimeter(self):
        return self.n ** 2
   
    def getArea(self):
        return ((self.n)*((self.side)**2)) / (4*(math.tan(math.pi/self.n)))
    

